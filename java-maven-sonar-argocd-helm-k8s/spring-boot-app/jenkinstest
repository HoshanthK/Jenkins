pipeline {
    agent any
    stages {
        stage('Verify Docker') {
            steps {
                script {
                    // Check if Docker daemon is running
                    def dockerStatus = sh(script: 'sudo systemctl is-active docker', returnStdout: true).trim()
                    
                    // If Docker is not active, start the service
                    if (dockerStatus != 'active') {
                        echo "Docker daemon is not running. Starting Docker..."
                        sh 'sudo systemctl start docker'
                    } else {
                        echo "Docker daemon is already running."
                    }

                    // Ensure Docker is accessible
                    sh 'docker --version'
                }
            }
        }
        stage('Build') {
            steps {
                sh 'docker inspect -f . abhishekf5/maven-abhishek-docker-agent:v1'
            }
        }
    }
}
