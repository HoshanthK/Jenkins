pipeline {
    agent any
    stages {
        stage('Verify Docker') {
            steps {
                script {
                    // Check if Docker daemon is running using docker info
                    def dockerStatus = sh(script: 'docker info', returnStatus: true)
                    
                    if (dockerStatus != 0) {
                        echo "Docker is not running. Attempting to start Docker..."
                        // Instead of systemctl, try to start docker manually if possible
                        sh 'dockerd &'
                    } else {
                        echo "Docker daemon is running."
                    }

                    // Ensure Docker is accessible
                    sh 'docker --version'
                }
            }
        }
        stage('Build') {
            steps {
                sh 'docker inspect -f . abhishekf5/maven-abhishek-docker-agent:v1'
            }
        }
    }
}
